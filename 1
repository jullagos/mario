#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int height;
    int spaces;
    int hash;
    int hash2;
    
    
do
{
    height = get_int("Height: ");
}
    while (height < 0 || height > 8);
    
    
    for (int i = 0; i < height; i++)
    {
        // Loop para espaÃ§os
        for(spaces = (height - i); spaces > 1; spaces--)
        {
            printf(" ");
        }
        
        // Loop para hashes
        for(hash = 0; hash <= (i); hash++)
        {
            printf("#");
        }
        printf("  ");
        for(hash2 = 0; hash2 <= (i); hash2++)
        {
            printf("#");
        }
       printf("\n");
    }    
}
